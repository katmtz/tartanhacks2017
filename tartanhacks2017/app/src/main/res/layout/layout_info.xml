<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="titleText" type="int"/>
        <variable name="infoText" type="CharSequence"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:background="@color/primary_dark_teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{titleText}"
            android:textColor="@color/white"
            android:textSize="@dimen/subtitle_text_size"
            android:padding="@dimen/text_padding_large"
            />

        <TextView
            android:background="@color/primary_teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{infoText}"
            android:textColor="@color/white"
            android:padding="@dimen/text_padding"
            />

    </LinearLayout>
</layout>